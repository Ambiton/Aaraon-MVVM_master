    <style name="buttonOfBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/rl_height_comment</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:layout_marginRight">16dip</item>
        <item name="android:layout_marginBottom">@dimen/margin_screenBottom</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:background">@drawable/white_redside_round_selector</item>
    </style>

    <style name="whiteButton">
        <item name="android:layout_width">200dip</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>

        <item name="android:background">@drawable/white_round_selector</item>

    </style>

    <style name="whiteAndredSideButton">
        <item name="android:layout_width">200dip</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/whiteColor88</item>


        <item name="android:background">@drawable/white_redside_round_selector</item>
